<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchinserverActivity">

    <TextView
        android:id="@+id/txt_SelectAFile"
        android:layout_width="168dp"
        android:layout_height="20dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/txt_SelectAFile"
        app:layout_constraintBottom_toTopOf="@+id/ls_FilesFTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_GoBackMainActivity" />

    <ListView
        android:id="@+id/ls_FilesFTP"
        android:layout_width="368dp"
        android:layout_height="401dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_GoBackMainActivity"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="149dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="149dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="@string/btn_GoBackMainActivity"
        app:layout_constraintBottom_toTopOf="@+id/txt_SelectAFile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>